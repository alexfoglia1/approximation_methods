function [y1] = appr_exp(y0,t,coeff,tol)
    y1 = y0*expsum(coeff,t,tol);
end

function [sum] = expsum(coeff,t,tol)
    last_sum = 1;
    next_sum = 0;
    k = 0;
    while abs(last_sum-next_sum) > tol || k>5000
        last_sum = next_sum;
        next_sum = last_sum + coeff^k*t^k / factorial(k);
        k = k+1;
    end
    
    sum = next_sum;
end

